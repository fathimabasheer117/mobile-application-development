<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="5"
    android:columnCount="4"
    android:background="@color/white"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/one"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:text="1"
        android:textSize="30dp" />

    <Button
        android:id="@+id/two"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:text="2"
        android:textSize="30dp" />

    <Button
        android:id="@+id/three"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:text="3"
        android:textSize="30dp" />

    <Button
        android:id="@+id/add"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:text="+"
        android:textSize="30dp" />

    <Button
        android:id="@+id/four"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:text="4"
        android:textSize="30dp" />

    <Button
        android:id="@+id/five"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:text="5"
        android:textSize="30dp" />

    <Button
        android:id="@+id/six"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:text="6"
        android:textSize="30dp" />

    <Button
        android:id="@+id/sub"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:text="-"
        android:textSize="30dp" />

    <Button
        android:id="@+id/seven"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:text="7"
        android:textSize="30dp" />

    <Button
        android:id="@+id/eight"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:text="8"
        android:textSize="30dp" />

    <Button
        android:id="@+id/nine"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:text="9"
        android:textSize="30dp" />

    <Button
        android:id="@+id/mult"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:text="*"
        android:textSize="30dp" />

    <Button
        android:id="@+id/zero"
        android:layout_width="78dp"
        android:layout_height="73dp"
        android:layout_margin="10dp"
        android:background="@color/black"
        android:text="0"
        android:textSize="30dp" />

    <Button
        android:id="@+id/equal"
        android:layout_width="wrap_content"
        android:layout_height="79dp"
        android:layout_margin="10dp"
        android:text="="
        android:textSize="30dp" />

    <Button
        android:id="@+id/div"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:text="/"
        android:textSize="30dp" />

    <Button
        android:id="@+id/clear"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:text="AC"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_columnSpan="4"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_columnSpan="4"
        android:textColor="@color/black" />


</GridLayout>
